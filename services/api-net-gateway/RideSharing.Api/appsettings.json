{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Grpc": {
    "AuthService": { "Url": "http://auth:50000" },
    "LoggerService": { "Url": "http://logger-service:50001" },
    "MailService": { "Url": "http://mail-service:50002" },
    "ImageService": { "Url": "http://image-service:50003" }
  },
  "ReverseProxy": {
    "Routes": {
      "auth-user-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/v1/User/{**catch-all}"
        }
      },
      "auth-email-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/v1/email/{**catch-all}"
        }
      },
      "auth-cities-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/v1/cities/{**catch-all}"
        }
      },
      "auth-token-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/v1/XFWToken/{**catch-all}"
        }
      },
      "logger-route": {
        "ClusterId": "logger-cluster",
        "Match": {
          "Path": "/api/v1/Logger/{**catch-all}"
        }
      },
      "mail-route": {
        "ClusterId": "mail-cluster",
        "Match": {
          "Path": "/api/v1/Mail/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-destination": {
            "Address": "http://auth:8080"
          }
        }
      },
      "logger-cluster": {
        "Destinations": {
          "logger-destination": {
            "Address": "http://logger-service:8082"
          }
        }
      },
      "mail-cluster": {
        "Destinations": {
          "mail-destination": {
            "Address": "http://mail-service:8083"
          }
        }
      }
    }
  }
}
